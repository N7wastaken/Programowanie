#include <iostream>
#include<string>
#include<cstring>
using namespace std;

void silnia() {
	int i;
	long double silnia;
	silnia = 1;

	cout << "wprowadz liczbe z ktorej chcesz silnie";
	cout << endl;
	cin >> i;

	while (i > 0) {

		silnia = silnia * i;
		i--;

	}
	cout << "wynik: ";
	cout << silnia;

}
void mnozenie() {

	float b;
	float a;
	cin >> a;
	cin >> b;
	float wynik;
	wynik = a * b;
	cout << wynik;

}

void modul() {
	float a, b;
	float wynik;

	cout << "Obliczanie modulu";
	cout << endl;
	cout << "wpisz liczbe a: ";

	cin >> a;
	cout << "wpisz liczbe b: ";
	cin >> b;

	wynik = sqrt(a * a + b * b);
	cout << "modul wynosi: " << wynik;


}

void trojkapi() {
	int a, b, c;
	int a1, b1, c1;

	cout << "wpisz 3 liczby: ";
	cout << endl;

	cin >> a;
	cin >> b;
	cin >> c;

	a1 = a * a;
	b1 = b * b;
	c1 = c * c;

	if (a1 + b1 == c1 || b1 + c1 == a1 || a1 + c1 == b1) {
		cout << "tak";
	}
	else {
		cout << "nie";
	}
}
void stringi() {
	string imie;
	string nazwisko;
	cin >> imie >> nazwisko;
	string full = imie + " " + nazwisko;
	cout << full;
	cout << endl;
	cout << nazwisko <<" "<< imie;
	cout << endl;
	cout << imie[0] << nazwisko[0];
	cout << endl;
	int a;
	a = imie.size();
	while (a >= 0) {
		cout << imie[a];
		a--;
	}
	cout << " ";
	int b;
	b = nazwisko.size();
	while (b >= 0) {
		cout << nazwisko[b];
		b--;
	}
	cout << endl;
	swap(imie[0], nazwisko[0]);
	cout << imie<<" "<< nazwisko;
}
void stringi2() {
	char im[]="Arkadiusz Mulkityn";
	//cin >> im;
	string imie = im;
	cout << imie;
		
	} 


int main()
{
	cout << "Wpisz 1 aby olbiczyc silnie";
	cout << endl;
	cout << "Wpisz 2 aby wymnozyc";
	cout << endl;
	cout << "Wpisz 3 aby obliczyc modul";
	cout << endl;
	cout << "Wpisz 4 aby obliczyc czy podane 3 liczby to trojka pitagorejska";
	cout << endl;
	cout << "Wpisz 5 aby zamienic nazwisko z imieniem ";
	cout << endl;
	cout << "Wpisz 6 aby odpalic stringi 2 ";
	cout << endl;
	cout << "Wpisz 3 aby obliczyc modul";
	cout << endl;
	
	int wybor;
	cin >> wybor;

    if (wybor == 1) {
		silnia();
		return 0;

    }
	if (wybor == 2) {
		mnozenie();
		return 0;
	}
	if (wybor == 3) {
		modul();
		return 0;

	}
	if (wybor == 4) {
		trojkapi();
		return 0;

	}
	if (wybor == 5) {
		stringi();
		return 0;

	}
	if (wybor == 6) {
		stringi2();
		return 0;

	}
	else { cout << "nie"; }
	return 0;

}


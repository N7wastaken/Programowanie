	void bezwzlicz(){
	
	double a,b,c;
	cin>>a>>b>>c;
	if(a<0){
		a=-a;
	}
	if(b<0){
		b=-b;
	}
	if(c<0){
		c=-c;
	}
	double suma = a + b + c;
	cout<<suma;
}
	void najztrzech(){
	
	double a,b,c;
	cin>>a>>b>>c;
	
	double naj = max(a,b);
	double najnaj = max(naj,c);
	cout<<najnaj;
}
	void booltroj(){
	
	double a,b,c;
	cin>>a>>b>>c;
	
	bool trojkat;
	double naj = max(a,b);
	double najnaj = max(naj,c);
	if(najnaj<a+b||najnaj<a+c||najnaj<b+c){
		trojkat = true;
		cout<<"Podane liczby sa stronami trojkata";
		cout<<" "<<trojkat;
		
	}
	if(a<=0||b<=0||c<=0){
		cout<<"Error: Numbers should be positive";
		trojkat=false;
		cout<<" "<<trojkat;
	}
}

int main(){
	
			cout<<"Wpisz 1 aby odliczyc od podanej liczby w dol ";
			cout<<endl;
			cout<<"Wpisz 2 aby odpalic nazwiska ";
			cout<<endl;
			cout<<"Wpisz 3 aby odpalic stringi char";
			cout<<endl;
			cout<<"Wpisz 4 aby policzyc litery ";
			cout<<endl;
			cout<<"Wpisz 5 aby policzyc litery ";
			cout<<endl;
			cout<<"Wpisz 6 aby dodac wartosci bezwzgledne 3 liczb ";
			cout<<endl;
			cout<<"Wpisz 7 aby wyswietlic najwieksza z podanych 3 liczb ";
			cout<<endl;
			cout<<"Wpisz 8 aby sprawdzic strony trojkata ";
			cout<<endl;
		
	int wybor;
		cin>>wybor;
		
		if(wybor==1){
		odliczanie();
		return 0;
		}
		if(wybor==2){
		stringi();
		return 0;
		}
		if(wybor==3){
		stringchar();
		return 0;
		}
		if(wybor==4){
		policzlit();
		return 0;
		}
		if(wybor==5){
		literylicz();
		return 0;
		}
		if(wybor==6){
		bezwzlicz();
		return 0;
		}
		if(wybor==7){
		najztrzech();
		return 0;
		}
		if(wybor==8){
		booltroj();
		return 0;
		}
		else{
			cout<<"Error";
		}
		return 0;
}

#include<iostream>
#include<string>
#include<cstring>
#include<bits/stdc++.h>
#include<cmath>
using namespace std;

void odliczanie(){
	int i;
	cin>>i;
	
	while(i>0){
		cout<<i;
		cout<<endl;
		i--;
	}
	}
	
void stringi(){
	string imie;
	string nazwisko;
	
	
		cin>>imie>>nazwisko;
	
	string full=imie+" "+nazwisko;
	
		cout<<full;
		cout<<endl;
		cout<<nazwisko<<" "<<imie;
		cout<<endl;
		cout<<imie[0]<<nazwisko[0];
		cout<<endl; 
	
	int a;
	a=imie.size();

	while(a>=0){
		cout<<imie[a];
		a--;
	}
	
		cout<<" ";
	
	int b;
	b=nazwisko.size();
	
	while(b>=0){
		cout<<nazwisko[b];
		b--;
	}
	
		cout<<endl;
	
	swap(imie[0], nazwisko[0]);
	cout<<imie<<nazwisko;
	
}
	void stringchar(){
	char im[]="Arkadiusz";
	string imie = im;
	cout<<imie;
		
}
	
	void policzlit(){
		
		const int poj = 200;
 	
	 cout << "Zliczacz" <<endl;
    char wyraz[poj];
    int ilosc_pow;
    cin >> ilosc_pow;
 
    if(ilosc_pow <= 150)
    {    for(int i=0; i < ilosc_pow; i++) //dziala poprawnie.
        {
            cin.ignore(1);
            cin.getline(wyraz, poj);
            cout << strlen(wyraz)  << endl;//Tutaj daj strlen wtedy policzy aktualną długość wyraz
        }
		
}
}

